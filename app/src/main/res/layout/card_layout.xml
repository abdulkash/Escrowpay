<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->

        <!--Text View to display Course Name-->

        <ImageView
            android:id="@+id/trans_user_img"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="center"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/trans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/trans_user_img"
            android:fontFamily="@font/karla"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->
        <TextView
            android:id="@+id/trans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trans_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/trans_user_img"
            android:drawablePadding="2dp"
            android:fontFamily="@font/karla"
            android:text="Recieved" />

        <TextView
            android:id="@+id/trans_fund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
            android:fontFamily="@font/karla"
            android:padding="15dp"
            android:text="55"
            android:textSize="26sp"
            app:drawableTint="#656565" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
