<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:background="@color/purple_500">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/karla"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_walllet"
                        android:layout_width="125dp"
                        android:layout_height="107dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_baseline_account_balance_wallet_24"
                        android:tint="@color/purple_500" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="13dp"
                        android:layout_toEndOf="@+id/img_walllet"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_bal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                            android:fontFamily="@font/karla"
                            android:paddingLeft="5dp"
                            android:text="20000000"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            app:drawableTint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/karla"
                            android:text=" Wallet Balance"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_payout"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/coin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_payout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Total Payout"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_payout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/dollar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_deposit"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Total Deposit"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_pending_escrow"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/progress_circles" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_pending_escrow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Pending Escrow"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_pending_escrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_rejected_escrow"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/ic_baseline_cancel_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_rejected_escrow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:text="Rejected Escrow"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_rejected_escrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_payment_hold"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/ic_baseline_lock_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_payment_hold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Payment Hold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_payment_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_escrow_complete"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/ic_baseline_verified_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_escrow_complete"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Completed Escrow"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_escrow_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_release_escrow"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/coin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_release_escrow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Release Escrow"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_release_escrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_release_pay"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/cash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_release_pay"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Recieved Payment"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_release_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_dispute_amount"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/men_carrying_a_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_dispute_amount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Disputed Amount"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_dispute_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_resolve_pay"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/resolve" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_resolve_pay"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Resolved Payment"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_resolve_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:drawableLeft="@drawable/nigeria_naira_currency_symbol"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:padding="5dp"
                        android:tint="@color/purple_500"
                        app:srcCompat="@drawable/ticket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_ticket"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/karla"
                        android:text="Support Ticket"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="66dp"
                        android:layout_marginEnd="69dp"
                        android:fontFamily="@font/karla"
                        android:text="200"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold"
